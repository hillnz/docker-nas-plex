#!/usr/bin/with-contenv bash

umount ${RCLONE_MOUNT_LEGACY_TARGET}
mkdir -p ${RCLONE_MOUNT_LEGACY_TARGET}
chown -R plex:plex ${RCLONE_MOUNT_LEGACY_TARGET}
exec s6-setuidgid plex /opt/rclone/rclone mount -v --bwlimit 3125 --config="$RCLONE_CONFIG" --read-only ${RCLONE_MOUNT_LEGACY_DIR} ${RCLONE_MOUNT_LEGACY_TARGET}
